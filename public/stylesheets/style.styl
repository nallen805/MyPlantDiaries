@import url('https://fonts.googleapis.com/css?family=Bad+Script&display=swap')
@import url('https://fonts.googleapis.com/css?family=Lobster+Two&display=swap')
@import url('https://fonts.googleapis.com/css?family=Playfair+Display+SC&display=swap')
@import url('https://fonts.googleapis.com/css?family=Philosopher&display=swap')

body.container
  font-family: 'Philosopher', sans-serif
  color: black 
a
  color: black

a:visited
  color: purple

form
  width: 50%
  position: relative
  left: 25%

#plantBG
  background: url('../images/plantBG.jpg') no-repeat right fixed

#title
  padding-top: 5%
  color: black
  font-family: 'Lobster Two', cursive
  font-size: 100px

.img-thumbnail:hover
  transform: scale(1.2, 1.2)
  border: 2px double darkgreen 

.plantDeco
  border: 3px double black 
  background-color: white

/** Backgrounds */
#adminBG
  background: url('../images/plantBG4.jpg') no-repeat center fixed

#allPlantsBG
  background: url('../images/plantBG6.jpg') no-repeat right fixed

#addPlantBG
  background: url('../images/plantBG2.jpg') no-repeat left fixed

#updateBG
  background: url('../images/plantBG8.jpg') no-repeat right fixed 

#updatedBG
  background: url('../images/plantBG8.jpg') no-repeat right fixed

#removeBG
  background: url('../images/plantBG9.jpg') no-repeat center fixed

#removedBG
  background: url('../images/plantBG9.jpg') no-repeat center fixed 

h4.display-4
  font-family: 'Playfair Display SC', serif
  font-weight: bolder
  color: black

hr 
  background-color: black

#nextRepotCalc
  background-color: white
  border-radius: 5px

#nextWaterCalc
  background-color: white
  border-radius: 5px

input[type='submit']
  width: 30%
  margin-left: 35%
