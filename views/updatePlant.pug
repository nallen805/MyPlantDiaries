//- Update Plant

extends layout
block append header
    script(src='../javascripts/jsFunctions.js')
block append content
    body#updateBG.img-fluid
    h4.display-4.text-center
        |#{message}
    br
    .row
        each p in plant
            .col-md-3.plantDeco
                |Name:&nbsp;#{p.plantName}
                br
                |Nickname:&nbsp;#{p.plantNickname}
                br
                |Lighting:&nbsp;#{p.plantLight}
                br
                |Repotting Schedule:&nbsp;#{p.repotSch}
                br
                |Watering Schedule:&nbsp;#{p.waterSch}
                br
                br
    hr 
    .row
        .col
            form(action='/updatedPlant' method='post').form-group.text-center
                label Enter the plant name you wish to update:
                input(type='text' name='update' required).form-control
                label Enter the nickname for the plant:
                input(type='text' name='newNickname' required).form-control
                input(type='submit' value='Update Plant').btn.btn-success.form-control
    h6.text-right
        a(href='/adminWelcome') Back
    